<frame xmlns="http://www.swixml.org/2007/Swixml" size="640,280"
   title="XStreamer Squad Helper" defaultCloseOperation="JFrame.EXIT_ON_CLOSE">
   <menubar>
      <menu text="File">
         <menuitem text="Import Squad" />
         <menuitem></menuitem>
      </menu>

   </menubar>

   <panel layout="BorderLayout">
      <tabbedpane constraints="BorderLayout.CENTER">
         <panel name="Timer" layout="FlowLayout(FlowLayout.CENTER)">
            <vbox gap="20">
               <hbox gap="2" constraints="FlowLayout.CENTER">
                  <textfield id="timerHourTextField" columns="3"
                     text="00" />
                  <label text=":" />
                  <textfield id="timerMinutesTextField"
                     columns="3" text="00" />
                  <label text=":" />
                  <textfield id="timerSecondsTextField"
                     columns="3" text="00" />
                  <box.glue />
               </hbox>

               <hbox gap="10" constraints="FlowLayout.CENTER">
                  <button id="restButton" text="Reset" action="resetTimer" />
                  <button id="startPauseButton" text="Start"
                     action="startTimer" />
               </hbox>

               <hbox gap="2" constraints="FlowLayout.CENTER">
                  <label id="countDownHoursLabel" font="Arial-BOLD-24"
                     text="00" />
                  <label font="Arial-BOLD-24" text=":" />
                  <label id="countDownMinutesLabel" font="Arial-BOLD-24"
                     text="00" />
                  <label font="Arial-BOLD-24" text=":" />
                  <label id="countDownSecondsLabel" font="Arial-BOLD-24"
                     text="00" />
               </hbox>

            </vbox>
         </panel>

         <panel name="Player1" layout="BorderLayout">
            <label constraints="BorderLayout.PAGE_START" text="Player 1 Squad Points: 0"
               font="Arial-BOLD-20" />
            <splitpane constraints="BorderLayout.WEST">
               <scrollpane minimumSize="150,800">
                  <tree id="player1Squad" model="${player1Model}" dblClickAction="activeNodePlayer1"/>
               </scrollpane>

               <panel id="contentPanelPlayer1" constraints="BorderLayout.WEST"
                  name="contentPanel" layout="FlowLayout">
                  <vbox gap="20">
                     <hbox>
                        <label text="Pilot status: " />
                        <checkbox text="destroyed" />
                     </hbox>
                     <hbox gap="2">
                        <label text="Shields:" />
                        <textfield id="shieldsPlayer1" columns="2" text="0" font="Arial-12" />
                     </hbox>
                     <hbox gap="2">
                        <label text="Hull:" />
                        <textfield id="hullPlayer1" columns="2" text="0" font="Arial-12" />
                     </hbox>
                     <hbox gap="10">
                        <button id="updatePlayer1Button" text="Update" action="squadUpdatePlayer1" />
                     </hbox>
                  </vbox>
               </panel>
            </splitpane>

         </panel>

         <panel name="Player2" layout="BorderLayout">
            <label constraints="BorderLayout.PAGE_START" text="Player 2 Squad Points: 0"
               font="Arial-BOLD-20" />
            <splitpane constraints="BorderLayout.WEST">
               <scrollpane minimumSize="150,800">
                  <tree id="player2Squad" model="${player2Model}"
                     action="selectNode" dblClickAction="activeNodePlayer2"
                     toolTipText="this is a tooltip" />
               </scrollpane>

               <panel id="contentPanelPlayer2" name="contentPanel"
                  layout="FlowLayout">
                  <vbox gap="20">
                     <hbox>
                        <label text="Pilot status: " />
                        <checkbox text="destroyed" />
                     </hbox>
                     <hbox gap="2">
                        <label text="Shields:" />
                        <textfield id="shieldsPlayer2" columns="2" text="0" font="Arial-12" />
                     </hbox>
                     <hbox gap="2">
                        <label text="Hull:" />
                        <textfield id="hullPlayer2" columns="2" text="0" font="Arial-12" />
                     </hbox>
                     <hbox gap="10">
                        <button id="updatePlayer2Button" text="Update" action="squadUpdatePlayer2"/>
                     </hbox>
                  </vbox>
               </panel>

            </splitpane>
         </panel>

      </tabbedpane>
   </panel>

</frame>