<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="us.nineworlds.xstreamer.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="us.nineworlds.xstreamer.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="us.nineworlds.xstreamer.Perspective"
            icon="icons/XWing_archigraphsx128.png"
            id="com.example.rcpapp.perspective"
            name="X-Wing">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="us.nineworlds.xstreamer.category"
            class="us.nineworlds.xstreamer.forms.CountDownTimerPage"
            icon="images/clock-icon.png"
            id="us.nineworlds.xstreamer.view.timer"
            name="Timer"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="us.nineworlds.xstreamer.category"
            class="us.nineworlds.xstreamer.forms.FirstPlayerPage"
            icon="images/P1.png"
            id="us.nineworlds.xstreamer.view.firstplayer"
            name="Player 1"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="us.nineworlds.xstreamer.category"
            class="us.nineworlds.xstreamer.forms.SecondPlayerPage"
            icon="images/P2.png"
            id="us.nineworlds.xstreamer.view.secondplayer"
            name="Player 2"
            restorable="true">
      </view>
      <view
            category="us.nineworlds.xstreamer.category"
            class="us.nineworlds.xstreamer.forms.GeneralFormPage"
            icon="images/Token_Charge_Back.png"
            id="us.nineworlds.xstreamer.view.general"
            name="General"
            restorable="true">
      </view>
      <category
            id="us.nineworlds.xstreamer.category"
            name="XStreamer">
      </category>
      <view
            class="uky.article.imageviewer.views.ImageView"
            id="us.nineworlds.xstreamer.imageview"
            name="ImageView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.example.rcpapp.perspective">
         <view
               id="us.nineworlds.xstreamer.view.general"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="us.nineworlds.xstreamer.view.timer"
               minimized="false"
               relationship="stack"
               relative="us.nineworlds.xstreamer.view.general">
         </view>
         <view
               id="us.nineworlds.xstreamer.view.firstplayer"
               minimized="false"
               relationship="stack"
               relative="us.nineworlds.xstreamer.view.timer">
         </view>
         <view
               id="us.nineworlds.xstreamer.view.secondplayer"
               minimized="false"
               relationship="stack"
               relative="us.nineworlds.xstreamer.view.firstplayer">
         </view>
         <view
               closeable="true"
               id="us.nineworlds.xstreamer.imageview"
               minimized="false"
               relative="us.nineworlds.xstreamer.view.secondplayer"
               relationship="right">
         </view>
         <view
               id="org.eclipse.ui.views.PropertySheet"
               relationship="bottom"
               relative="us.nineworlds.xstreamer.view.general">
         </view>
         
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.import"
                  label="Import"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <separator
                  name="com.example.rcpapp.separator1"
                  visible="true">
            </separator>
         </menu>
         <menu
               label="Edit">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences">
            </command>
         </menu>
         <menu
               label="Window">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  style="push">
            </command>              
         </menu>
         <menu
               label="Help"
               mnemonic="&amp;H">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About XStreamer"
                  style="push">
            </command>
            <separator
                  name="us.nineworlds.xstreamer.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="us.nineworlds.xstreamer.donate"
                  label="Donate"
                  style="push">
            </command>
            
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="us.nineworlds.xstreamer.preferences.SquadPrefencesPage"
            id="us.nineworlds.xstreamer.preferences.GeneralPreferencePage"
            name="Squadron">
      </page>
      <page
            class="us.nineworlds.xstreamer.preferences.TimerPreferencePage"
            id="us.nineworlds.xstreamer.timer.pref"
            name="Timer">
      </page>
      <page
            category="us.nineworlds.xstreamer.preferences.GeneralPreferencePage"
            class="us.nineworlds.xstreamer.preferences.PlayerTemplatePreferencePage"
            id="us.nineworlds.xstreamer.squadTemplates"
            name="First Player Templates">
      </page>
      <page
            category="us.nineworlds.xstreamer.preferences.GeneralPreferencePage"
            class="us.nineworlds.xstreamer.preferences.SecondPlayerTemplatePreference"
            id="us.nineworlds.xstreamer.SecondPlayerSquadTemplates"
            name="Second Player Templates">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="us.nineworlds.xstreamer.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="us.nineworlds.xstreamer.ui.importWizards.sampleCategory"
            name="Squads">
      </category>
      <wizard
            category="us.nineworlds.xstreamer.ui.importWizards.sampleCategory"
            class="us.nineworlds.xstreamer.ui.importWizards.PlayerSquads"
            icon="images/Token-PrototypeShip.png"
            id="us.nineworlds.xstreamer.ui.importWizards.PlayerSquads"
            name="Import Player Squads">
         <description>
            Import a file from the local file system into the workspace.
         </description>
      </wizard>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="us.nineworlds.xstreamer.application"
            name="XStreamer">
         <property
               name="appName"
               value="XStreamer">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/us.nineworlds.xstreamer.branding/images/xstreamer_lg.png">
         </property>
         <property
               name="aboutText"
               value="XStreamer Squad Helper&#x0A;Version 0.5.0">
         </property>
         <property
               name="startupForegroundColor"
               value="EDD400">
         </property>
         <property
               name="startupMessageRect"
               value="7,252,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="us.nineworlds.xstreamer.donate"
            name="Donate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="us.nineworlds.xstreamer.handler.DonateHandler"
            commandId="us.nineworlds.xstreamer.donate">
      </handler>
   </extension>

   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            targetID="us.nineworlds.xstreamer.imageview"
            id="uky.article.imageviewer.views.ImageView.pushbutton">
         <!-- Open button -->
         <action
               label="open"
               icon="icons/Open16.gif"
               tooltip="Open image"
               class="uky.article.imageviewer.actions.PushActionDelegate"
               toolbarPath="push_group"
               enablesFor="*"
               id="toolbar.open">
               <!--id="org.eclipse.ui.file.open"-->
         </action>
         <!-- Rotation button -->
         <action
               label="Rotate"
               icon="icons/Rotate16.gif"
               tooltip="Rotate"
               class="uky.article.imageviewer.actions.PushActionDelegate"
               toolbarPath="push_group"
               enablesFor="*"
               id="toolbar.rotate">
         </action>
         <!-- Fit button -->
         <action
               label="FitWindow"
               icon="icons/Fit16.gif"
               tooltip="Fit window"
               class="uky.article.imageviewer.actions.PushActionDelegate"
               toolbarPath="push_group"
               enablesFor="*"
               id="toolbar.fit">
         </action>
         <!-- Original button -->
         <action
               label="OriginalSize"
               icon="icons/Original16.gif"
               tooltip="Original size"
               class="uky.article.imageviewer.actions.PushActionDelegate"
               toolbarPath="push_group"
               enablesFor="*"
               id="toolbar.original">
         </action>
         <!-- ZoomIn button -->
         <action
               label="ZoomIn"
               icon="icons/ZoomIn16.gif"
               tooltip="Zoom in"
               class="uky.article.imageviewer.actions.PushActionDelegate"
               toolbarPath="push_group"
               enablesFor="*"
               id="toolbar.zoomin">
         </action>
         <!-- ZoomOut button -->
         <action
               label="ZoomOut"
               icon="icons/ZoomOut16.gif"
               tooltip="Zoom out"
               class="uky.article.imageviewer.actions.PushActionDelegate"
               toolbarPath="push_group"
               enablesFor="*"
               id="toolbar.zoomout">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="us.nineworlds.xstreamer.model.PilotTreeNode"
            class="us.nineworlds.xstreamer.property.PilotAdapterFactory">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
      <factory
            adaptableType="us.nineworlds.xstreamer.model.UpgradeTypeTreeNode"
            class="us.nineworlds.xstreamer.property.UpgradeTypeAdapterFactory">
         <adapter type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
      
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="us.nineworlds.xstreamer.Startup">
      </startup>
   </extension>
</plugin>
