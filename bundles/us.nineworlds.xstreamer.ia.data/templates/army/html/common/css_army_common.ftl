.box {
	width: 15px;
	height: 15px;
	float: left;
	border-style: solid;
	border-color: white;
	border-width: 1px;
	vertical-align: text-bottom;
}

.spacer {
	width: 1px;
	height: 1px;
	padding: 1px;
	float: left;
}

.red {
	background: red;
}

.blue {
	background: blue;
}

.green {
	background: green;
}

.yellow {
	background: red;
}

.black {
	background: black;
}

.white {
	background: white;
}

.left-text {
	float: left;
}

.vitals {
	clear: both;
	margin-top: 1px;
}

.melee {
	font-family: "ImperialAssaultSymbols";
	font-size: 12pt;
	padding-right: 5px;
	color: white;
	-webkit-font-smoothing: antialiased;
}

.melee:before {
    content: "P";
}

.range {
	font-family: "ImperialAssaultSymbols";
	font-size: 12pt;
	padding-right: 5px;
	color: white;
	-webkit-font-smoothing: antialiased;
}

.range:before {
    content: "O";
}

.defense {
	font-family: "ImperialAssaultSymbols";
	font-size: 12pt;
	padding-right: 5px;
	color: white;
	-webkit-font-smoothing: antialiased;
}

.mercenary {
	font-family: "ImperialAssaultSymbols";
	font-size: 12pt;
	padding-right: 5px;
	color: green;
}

.mercenary:before {
    content: "W";
}

.limit {
	padding-left: 10px;
}

.deploymentName {
	font-weight: bold;
}

.deployment {
	padding-bottom: 5px;
}

#army {
	padding: 10px;
	height: 100%;
	background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));
}
